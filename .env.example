# HiAnime API - Environment Configuration Template
# Copy this file to .env and configure as needed

# ============================================
# Base URLs
# ============================================
BASE_URL=https://hianime.do
BASE_URL_V2=https://kaido.to

# ============================================
# Server Configuration
# ============================================
PORT=5000

# ============================================
# Request Timeouts (milliseconds)
# ============================================
REQUEST_TIMEOUT=10000
STREAM_TIMEOUT=15000
EXTRACTION_TIMEOUT=20000

# ============================================
# Retry Configuration
# ============================================
MAX_RETRY_ATTEMPTS=3
RETRY_BASE_DELAY=1000

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_LIMIT=100

# ============================================
# Cache Configuration (seconds)
# ============================================
CACHE_ENABLED=true
CACHE_TTL_HOMEPAGE=86400
CACHE_TTL_SEARCH=3600
CACHE_TTL_ANIME=21600
CACHE_TTL_EPISODE=1800

# ============================================
# Redis Configuration (Optional)
# ============================================
# UPSTASH_REDIS_REST_URL=your_redis_url
# UPSTASH_REDIS_REST_TOKEN=your_redis_token

# ============================================
# Feature Flags
# ============================================
ENABLE_FALLBACK=true
ENABLE_RETRY=true
ENABLE_CACHE=true

# ============================================
# Logging
# ============================================
# Options: ERROR, WARN, INFO, DEBUG
LOG_LEVEL=INFO

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins, or leave empty for all origins
# Example: ORIGIN=https://mysite.com,https://another.com
# ORIGIN=*

# ============================================
# User Agent (optional)
# ============================================
# USER_AGENT=Mozilla/5.0 (X11; Linux x86_64; rv:122.0) Gecko/20100101 Firefox/122.0
